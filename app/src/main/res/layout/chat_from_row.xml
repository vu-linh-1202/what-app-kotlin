<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_700">

    <TextView
        android:id="@+id/textView_from_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="16dp"
        android:textColor="@color/teal_700"
        android:maxWidth="240dp"
        android:background="@drawable/bg_receiver"
        android:text="This is my message"
        app:layout_constraintStart_toEndOf="@+id/image_chat_from_row"
        app:layout_constraintTop_toTopOf="@+id/image_chat_from_row" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_chat_from_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>